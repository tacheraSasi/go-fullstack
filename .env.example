# Server
SERVER_PORT=8080
GIN_MODE=debug

# Auth
JWT_SECRET=change-me-in-production
JWT_EXPIRES_IN=24

# CORS (comma-separated list or *)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_FILE_PATH=logs/app.log

# Database (sqlite | postgres | mysql)
DB_TYPE=sqlite
DB_PATH=core.db

# Postgres/MySQL fields (used when DB_TYPE is postgres or mysql)
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=dbname